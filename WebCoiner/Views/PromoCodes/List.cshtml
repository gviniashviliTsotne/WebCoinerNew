@model IEnumerable<WebCoiner.PromoCode>

@{
    ViewBag.Title = "Index";
}

    <section id="home_section" class="section_banner section_gradiant3">
       
       
        <div class="container animation animated fadeInUp">

            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-white btn-radius create_btn" })
            </p>
            <table class="table table-light">
                <tr>
                    <th>
                        PromoCode
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PromoCode1)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>
